package com.vendas.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import java.util.List;
import com.vendas.modelos.Cliente;
import com.vendas.repository.ClienteRepository;

@Service
public class ClienteService {

    @Autowired
    private ClienteRepository repository;

    public Cliente salvar(Cliente c) {
        return repository.save(c);
    }

    public List<Cliente> listar() {
        return repository.findAll();
    }

    public Cliente buscar(Integer id) {
        return repository.findById(id).orElse(null);
    }

    public Cliente atualizar(Integer id, Cliente novo) {
        Cliente atual = buscar(id);
        if (atual == null) return null;

        atual.setNome(novo.getNome());
        atual.setEndereco(novo.getEndereco());
        atual.setTelefone(novo.getTelefone());

        return repository.save(atual);
    }

    public void deletar(Integer id) {
        repository.deleteById(id);
    }
}
